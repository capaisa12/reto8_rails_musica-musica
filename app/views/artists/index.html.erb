<h1>Artistas</h1>
<div class="container">
  <div class="row">
    <% @artists.each do |artist| %>
    <div class="col-3">
      <div class="card">
        <img class="card-img-top" src="<%= artist.image_url %>" style="height: 250px;">
        <div class="card-body">
          <h4 class="card-title"><%= artist.name %></h4>
          <a href="/artists/<%=artist.id %>" class="btn btn-primary">Ver mas</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <img src="<%= @artist.image_url %>" width="400px" height="400px" class="float-right" style="padding-top: 10px;">
  <h1><%= @artist.name %></h1>
    <div class="row">
  <% @artist.albums.each do |album| %>
  <div class="col-4">
    <div class="card">
      <img class="card-img-top" src="<%= album.image_url %>" style="height: 250px;">
      <div class="card-body">
        <h4 class="card-title"><%= album.name %></h4>
        <p><%= album.released_at %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
